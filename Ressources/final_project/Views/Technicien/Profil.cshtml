
@model final_project.Models.Technicien
@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/_TechnicienLayout.cshtml";

}
<h4>Votre informations</h4>
<div class="container-xl px-4 mt-4">
    <hr class="mt-0 mb-4">
    <div class="row">
        <div class="col-xl-4">
            <!-- Profile picture card-->
            <div class="card mb-4 mb-xl-0">
                <div class="card-header">Photo de profil</div>
                <div class="card-body text-center">
                    <!-- Profile picture image-->
                    <img class="img-account-profile rounded-circle mb-2" src="http://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                    <!-- Profile picture help block-->
                    <div class="small font-italic text-muted mb-4">JPG ou PNG inferieur de 5 MB</div>
                    <!-- Profile picture upload button-->
                    <button class="btn btn-primary" type="button">Mettre a jour l'image</button>
                </div>
            </div>
        </div>
        <div class="col-xl-8">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Details du compte</div>
                <div class="card-body">
                    <form>
                        <!-- Form Group (username)-->
                        <div class="mb-3">
                            <label class="small mb-1" for="inputUsername">Nom de l'utisateur</label>
                            <input class="form-control" id="inputUsername" type="text" value="username" disabled>
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (first name)-->
                            <div class="col-md-12">
                                <label class="small mb-1" for="inputFirstName">Adresse email</label>
                                <input class="form-control" id="inputFirstName" type="text" value="aaa@gmail.com" disabled>
                            </div>
                        </div>
                        <!-- Save changes button-->
                        
                        <a href="/Enseignants/login">
                            <button class="btn btn-primary" type="button">Modifier</button>
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

