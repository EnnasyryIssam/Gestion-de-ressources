
@model final_project.Models.Technicien
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TechnicienLayout.cshtml";
}

<h4>Votre informations</h4>
<div class="container-xl px-4 mt-4">
    <hr class="mt-0 mb-4">
    <div class="row">
        <div class="col-xl-8">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Details du compte</div>
                <div class="card-body">
                    <form>
                        <!-- Form Group (username)-->
                        <div class="mb-3">
                            <label class="small mb-1" for="inputUsername">Nom de l'utisateur</label>
                            @Html.TextBoxFor(model => model.Nom, new { @class = "form-control hidden", @id = "idInput1", @readonly = "readonly", @Name = "" })
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (first name)-->
                            <div class="col-md-12">
                                <label class="small mb-1" for="inputFirstName">Adresse email</label>
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control hidden", @id = "idInput1", @readonly = "readonly", @Name = "" })
                            </div>
                        </div>
                        <!-- Save changes button-->
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

