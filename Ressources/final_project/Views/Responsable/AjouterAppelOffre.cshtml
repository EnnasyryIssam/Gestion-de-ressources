@model final_project.Models.AppelOffre

@{
    ViewBag.Title = "Ajouter Appel d'Offre";
    Layout = "~/Views/Shared/_ResponsableLayout.cshtml";
}

<div class="container-fluid">
    <div style="display: flex; justify-content: space-between; align-items: center; ">
        <h4 style="margin-top: 15px">Ajouter un nouveau appel d'offre</h4>
        @using (Html.BeginForm("AjouterAppelOffre", "Responsable", FormMethod.Post))
        {
            <button type="submit" class="btn btn-primary">Ajouer un nouveau</button>
        }
    </div>

    <h6>Les besoins de type <strong>ordinateur</strong></h6>
    <table class="table" style="border:1px solid #ddd">
        <thead>
            <tr>
                <th style="width:60px" scope="col">ID</th>
                <th scope="col">Enseignant</th>
                <th scope="col">Marque</th>
                <th scope="col">CPU</th>
                <th scope="col">RAM</th>
                <th scope="col">Disque dur</th>
                <th scope="col">Ecran</th>
                <th scope="col">Etat</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewData["listO"] != null)
            {
                foreach (var item in (List<final_project.Models.Ordinateur>)ViewData["listO"])
                {
                    if (item.Etat == "Accepté")
                    {
                        <tr>
                            <th scope="row" style="width:60px">@item.Id</th>
                            <th scope="row">@item.Enseignant.Nom</th>
                            <td>@item.Marque</td>
                            <td>@item.Cpu</td>
                            <td>@item.Ram</td>
                            <td>@item.Disquedur</td>
                            <td>@item.Ecran</td>
                            <td><span class="badge badge-pill badge-success" style="padding:9px 15px">@item.Etat</span></td>
                        </tr>
                    }

                }
            }

        </tbody>
    </table>

    <h6 style="margin-top:45px">Les besoins de type <strong>imprimante</strong></h6>
    <table class="table" style="border:1px solid #ddd">
        <thead>
            <tr>
                <th style="width:60px" scope="col">ID</th>
                <th scope="col">Enseignant</th>
                <th scope="col">Marque</th>
                <th scope="col">Vitesse</th>
                <th scope="col">Resolution</th>
                <th scope="col">Etat</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewData["listI"] != null)
            {
                foreach (var item in (List<final_project.Models.Imprimante>)ViewData["listI"])
                {
                    if (item.Etat == "Accepté")
                    {
                        <tr>
                            <th scope="row" style="width:60px">@item.Id</th>
                            <th scope="row">@item.Enseignant.Nom</th>
                            <td>@item.Marque</td>
                            <td>@item.Vitesse</td>
                            <td>@item.Resolution</td>
                            <td><span class="badge badge-pill badge-success" style="padding:9px 15px">@item.Etat</span></td>
                        </tr>
                    }

                }
            }

        </tbody>
    </table>
</div>

<style>
    h4 {
        margin-bottom: 20px
    }

    tbody {
        display: block;
        overflow: auto;
        overflow-y: scroll;
        max-height: 400px
    }

        thead, tbody tr {
            display: table;
            width: 100%;
            table-layout: fixed; /* even columns width , fix width of table too*/
        }
</style>
