@model final_project.Models.Imprimante

@{
    ViewBag.Title = "AjouterBesoinImprimante";
    Layout = "~/Views/Shared/_EnseignantLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Ajouter besoin de type <strong>imprimante</strong></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Marque, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.Marque, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Marque, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Vitesse, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.Vitesse, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Vitesse, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Resolution, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.Resolution, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Resolution, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2">
                <input type="submit" value="Ajouter à mes besoins" class="btn btn-primary" />
            </div>
        </div>


        @if (ViewBag.Error == false)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                votre besoin a été ajouté <strong>avec success</strong>.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        else if (ViewBag.Error == true)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                une erreur s'est produite lors du traitement de cette demande.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

    </div>
}

<script>
    $(document).ready(function () {
        document.getElementsByTagName("form").reset();

    });
</script>